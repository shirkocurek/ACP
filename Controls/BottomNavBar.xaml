<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="c971_mobile_application_development_using_c_sharp.Controls.BottomNavBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="This">

  <Grid Padding="16"
        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#111111}"
        ColumnDefinitions="*,*"
        VerticalOptions="End"
        HeightRequest="76"
        Shadow.Opacity="0.1">
    <Button Text="Terms"
            Grid.Column="0"
            FontSize="18"
            Padding="28,14"
            CornerRadius="24"
            Margin="6,0"
            BackgroundColor="{AppThemeBinding Light=#F1F3F5, Dark=#222}"
            TextColor="{AppThemeBinding Light=#111, Dark=#FFF}"
            Command="{Binding Source={x:Reference This}, Path=NavigateTermsCommand}" />
    <Button Text="Courses"
            Grid.Column="1"
            FontSize="18"
            Padding="28,14"
            CornerRadius="24"
            Margin="6,0"
            BackgroundColor="{AppThemeBinding Light=#F1F3F5, Dark=#222}"
            TextColor="{AppThemeBinding Light=#111, Dark=#FFF}"
            Command="{Binding Source={x:Reference This}, Path=NavigateCoursesCommand}" />
  </Grid>
</ContentView>

